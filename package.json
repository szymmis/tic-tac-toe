{
  "name": "tic-tac-toe",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x 'tsx --tsconfig ./src/server/tsconfig.json' src/server/main.ts",
    "start": "NODE_ENV=production tsx --tsconfig ./src/server/tsconfig.json src/server/main.ts",
    "build": "vite build",
    "lint": "eslint --fix",
    "format": "prettier --write",
    "typecheck": "tsc -p src/client/tsconfig.json --noEmit && tsc -p src/server/tsconfig.json --noEmit",
    "test": "vitest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "clsx": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-query": "^3.39.3",
    "react-router": "^6.21.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2",
    "vite-express": "0.12.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.3",
    "@types/react-dom": "^18.2.16",
    "@types/react": "^18.0.38",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0",
    "vite-tsconfig-paths": "^4.2.3",
    "vite": "^5.0.2",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{json,html,css}": [
      "npm run format"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  }
}
